<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="4dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="0dp">

            <LinearLayout
                android:id="@+id/lltxt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/back_textView">

                <TextView
                    android:id="@+id/textV1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grupo A"
                    android:textColor="@color/text_color"

                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="J"
                        android:textColor="@color/text_color"
                        android:layout_marginStart="125dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GP:GC"
                        android:textColor="@color/text_color"
                        android:paddingStart="35dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+/-"
                        android:textColor="@color/text_color"
                        android:paddingStart="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pzs."
                        android:textColor="@color/text_color"
                        android:paddingStart="30dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lltxt1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:paddingStart="5dp"
                    android:text="1"
                    android:textColor="@color/text_color" />

                <ImageView
                    android:id="@+id/imgRussia"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/russia" />

                <TextView
                    android:id="@+id/txtRussia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:paddingStart="15dp"
                    android:text="RÃºssia"
                    android:textColor="@color/text_color" />


            </LinearLayout>


            <View
                android:id="@+id/divider1"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="120dp"
                 />

            <LinearLayout
                android:id="@+id/ll1Direita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/divider1"
                android:layout_below="@+id/lltxt1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="60dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0  :  0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="40dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="30dp"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="40dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:paddingStart="5dp"
                    android:text="2"
                    android:textColor="@color/text_color" />

                <ImageView
                    android:id="@+id/imgArabia"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/arabia_saudita" />

                <TextView
                    android:id="@+id/txtarabia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:paddingStart="15dp"
                    android:text="Arabia Saudita"
                    android:textColor="@color/text_color" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2direita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/divider1"
                android:layout_below="@+id/ll1Direita"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="60dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0  :  0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="40dp"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="30dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="40dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:paddingStart="5dp"
                    android:text="3"
                    android:textColor="@color/text_color" />

                <ImageView
                    android:id="@+id/imgEgito"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/egito" />

                <TextView
                    android:id="@+id/txtEgito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:paddingStart="15dp"
                    android:text="Egito"
                    android:textColor="@color/text_color" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3direita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/divider1"
                android:layout_below="@+id/ll2direita"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="60dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0  :  0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="40dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="30dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="40dp"
                   />

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:paddingStart="5dp"
                    android:text="4"
                    android:textColor="@color/text_color" />

                <ImageView
                    android:id="@+id/imgUruguai"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/egito" />

                <TextView
                    android:id="@+id/txtUruguai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:paddingStart="15dp"
                    android:text="Uruguai"
                    android:textColor="@color/text_color" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/divider1"
                android:layout_below="@+id/ll3direita"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="60dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0  :  0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="40dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="30dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:text="0"
                    android:layout_marginTop="10dp"
                    android:paddingStart="40dp"
                    />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>